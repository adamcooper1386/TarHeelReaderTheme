    <form action="{{action}}" method="{{method}}">
    <table>
    {{#controls}}
        <tr><td>
        {{#label}}
        <label for="{{name}}Input">{{label}}</label>
        {{/label}}
        </td><td>
        {{#input}}
        <input type="{{type}}"  value="{{value}}" {{#name}}name="{{name}}" id="{{name}}Input"{{/name}}
               {{#description}}placeholder="{{description}}" title="{{description}}"{{/description}} />
        {{/input}}
        {{#select}}
        <select id="{{name}}Input" name="{{name}}">
            {{#options}}
            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
            {{/options}}
        </select>
        {{/select}}
        </td>
        </tr>
    {{/controls}}
    </table>
    </form>
